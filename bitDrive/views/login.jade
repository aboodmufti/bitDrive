extends layout

block content
  img(src="images/logo.png" id="logoMain")
  div(align="center")
    form(action="/login", method="post")
        div
            p(class="error")= msg
            input(type="text", name="email" ,placeholder="Email", class='bigInput')
            input(type="password", name="password", placeholder="Password", class='bigInput')
            br
            br
        button(type="submit", class="blue") Login
    form(action="/newAccount", method="get")
        button(type="submit", class="green") Create Account   
